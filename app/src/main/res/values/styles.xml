<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="DialogAnimations" />

    <style name="DialogAnimations.SmileWindow">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="mystyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fdfdff</item>
        <item name="android:textStyle">bold</item>
    </style>
    \

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="customer_activity_style" parent="Theme.AppCompat.Light">
        <item name="actionBarSize">@dimen/d_40_45_55</item>
    </style>

    <style name="customerlst_activity_style" parent="Theme.AppCompat.Light">
        <item name="actionBarSize">@dimen/d_40_45_55</item>
    </style>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/LightGray</item>
        <item name="colorPrimaryDark">@color/DarkGray</item>
        <item name="colorAccent">@color/Black</item>
    </style>

    <style name="InvisibleFocusHolder">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:inputType">none</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
